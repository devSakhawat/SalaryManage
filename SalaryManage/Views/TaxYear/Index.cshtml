@using SalaryManage.Domain.Entity;
@model IEnumerable<TaxYear>

<!-- Tax Year content -->
<div class="container-fluid pt-4 px-4">
   <div class="theme-bg-secondary theme-font-color text-center rounded p-4">
      <div class="d-flex align-items-center justify-content-between mb-4">
         <h6 class="mb-0">Tax Year List</h6>
         <a class="theme-anchor" asp-controller="TaxYear" asp-action="Create">Add New TaxYear</a>
      </div>
      <div class="table-responsive">
         <table class="table text-start align-middle table-bordered table-hover mb-0">
            <thead>
               <tr class="text-white theme-font-color">
                  <th scope="col"><input class="form-check-input" type="checkbox"></th>
                  <th scope="col">Tax Year</th>
                  <th scope="col">Action</th>
               </tr>
            </thead>
            <tbody class="theme-font-color">
               @foreach (var item in Model)
               {
                  <tr>
                     <td><input class="form-check-input" type="checkbox"></td>
                     <td>
                        <a asp-action="Detail" asp-route-id="@item.Id">@item.YearOfTax</a>
                     </td>
                     <td>
                        <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-primary">
                           <i class="fa-solid fa-pen-to-square"></i>
                           Update
                        </a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                           <i class="fa-solid fa-trash"></i>
                           Delete
                        </a>
                     </td>
                  </tr>
               }
            </tbody>
         </table>
      </div>
   </div>
</div>
<!-- Pay Tax Year content -->
