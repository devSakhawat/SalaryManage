@using SalaryManage.Domain.Entity;
@model TaxYear

<!-- TaxYear content -->
<div class="container-fluid pt-4 px-4">
   <div class="theme-bg-secondary theme-font-color text-center rounded p-4">
      <div class="d-flex align-items-center justify-content-between mb-4">
         <h2 class="text-center text-danger"> Are you sure you want to delete this Tax Year ?</h2>
      </div>
      <form method="post" asp-action="Delete" class="taxYearDelete text-start">
         <div class="row mb-3">
            <div class="col-sm-2">
               <input asp-for="Id" hidden />
               <p> @Html.DisplayNameFor(Model => Model.YearOfTax)</p>
            </div>
            <div class="col-sm-10">
               <p>@Html.DisplayFor(model => model.YearOfTax)</p>
            </div>
         </div>

         <button type="submit" class="btn btn-danger"><i class="fas fa-plus-square"></i> &nbsp;Delete </button>
         <a asp-action="Index" class="btn btn-primary"><i class="fas fa-caret-square-left"></i> &nbsp;Back </a>
      </form>
   </div>
</div>
<!-- TaxYear content -->